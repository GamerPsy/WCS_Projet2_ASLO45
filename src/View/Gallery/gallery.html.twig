{% extends 'layout.html.twig' %}

{% block title %} {% endblock %}

{% block style %} {% endblock %}

{% block content %}

    <!-- --- Photos home--- -->
    <section>
        <div class="container">
            <div class="row">
                {%  for image in images %}
                    <div class="col-md-4 col-sm-12 py-1">
                        <div class="thumbnail">
                            <a href="#" data-toggle="modal" data-target="#photo1"><img class="rounded mx-auto d-block img-fluid img-thumbnail" src="{{ image.path_image }}" alt="Photo 1" ></a>
                        </div>
                    </div>
                    <div class="modal" tabindex="-1" role="dialog" id="photo1">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title">Photo 1</h3>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <img src="{{ image.path_image }}" alt="Photo 1" class="mx-auto d-block img-fluid">
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>


    </section>


{% endblock %}