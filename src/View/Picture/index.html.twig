{% extends 'layout.html.twig' %}

{% block title %} {% endblock %}

{% block style %}/assets/css/style.css {% endblock %}

{% block content %}

    <!-- Photos home -->
    <section>
        <div class="container p-3">
            <h1 class="text-center p-2" id="titreGalerie">Galerie</h1>
            <div class="row">
                {%  for img in pictures %}
                    <div class="col-md-4 col-sm-12 p-2">
                        <div class="thumbnail">
                            <a href="#" data-toggle="modal" data-target="#photo{{ img.id }}"><img class="effect rounded mx-auto d-block img-fluid img-thumbnail w-100 h-100" src="{{ img.picture_path }}" alt="Photo 1" ></a>
                            <p class="text_effect">cliquez pour agrandir</p>
                        </div>
                    </div>
                    <div class="modal" tabindex="-1" role="dialog" id="photo{{ img.id }}">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <img src="{{ img.picture_path }}" alt="Photo 1" class="mx-auto d-block img-fluid w-100 h-100">
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>


    </section>


{% endblock %}