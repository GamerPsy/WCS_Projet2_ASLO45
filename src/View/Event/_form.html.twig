<div class="radiant-bg container">
    <div class="add_form">
        <h2 class="text-center">éditer un événement</h2>
        <form method="post" action="add" enctype="multipart/form-data">
            <input type="hidden" value="{{ event.id }}" name="id">

            <div class="form-group">
                <label for="event_title">Titre de l'événement</label>
                <input id="event_title" class="form-control" type="text" value="{% if errors %}{{ errors.title }}{% endif %}"
                    name="title" required />
                {% if errors.title_length %}
                <div class="alert alert-danger">{{ errors.title_length }}</div>
                {% elseif errors.title_regex %}
                <div class="alert alert-danger">{{ errors.title_regex }}</div>
                {% endif %}
            </div>

            <div class="form-group">
                <label for="event_content">Contenu de l'événement</label>
                <textarea id="event_content" class="form-control" type="text" name="content" required>{% if errors %}{{ errors.content }}{% endif %}</textarea>
                {% if errors.content_length %}
                <div class="alert alert-danger">{{ errors.content_length }}</div>
                {% endif %}
            </div>

            <div class="form-group">
                <label for="event_imageUrl">Image associée (optionelle)</label>
                <input id="event_imageUrl" class="form-control-file" type="file" name="file" />
                {% if errors.image_type %}
                <div class="alert alert-danger">{{ errors.image_type }}</div>
                {% elseif errors.image_size %}
                <div class="alert alert-danger">{{ errors.image_size }}</div>
                {% endif %}
            </div>

            <div class="form-group">
                <label for="event_link">Lien Http vers l'article complet (optionnel)</label>
                <input id="event_link" class="form-control" type="text" value="{% if errors %}{{ errors.linkUrl }}{% endif %}"
                    name="linkUrl">
                {% if errors.link_regex %}
                <div class="alert alert-danger">{{ errors.link_regex }}</div>
                {% endif %}
            </div>
            <div class="text-center">
                <input type="submit" class="btn" value="Valider">
            </div>
        </form>
    </div>
</div>