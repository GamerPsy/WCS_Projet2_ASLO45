{% extends 'layout.html.twig' %}

{% block title %}Gestion des images{% endblock %}

{% block content %}

    <!-- Affichage des images existantes -->
    <div class="container">
        <a class="btn btn-primary mx-5 my-5 " href="/admin/addImage" role="button">Ajouter des images</a>
        <div class="row pb-5 ">
            {% for image in images %}
                <div class="col-lg-3 card " style="width: 8rem;">
                    <img class="card-img-top" src="../../{{ image.image_path }}" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">{{ image.image_name }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}