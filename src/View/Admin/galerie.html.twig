{% extends 'Admin/admin_layout.html.twig' %}

{% block title %}Gestion des images{% endblock %}

{% block content %}

    <!-- Affichage des images existantes -->
    <div class="container">
        <div class="row pb-5 ">
            {% for picture in pictures %}
                <div class="col-lg-3 card " style="width: 8rem;">
                    <img class="card-img-top" src="../../{{ picture.picture_path }}" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">{{ picture.picture_name }}</p>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal{{ picture.id }}" >Supprimer</button>
                        <div class="modal fade" id="exampleModal{{ picture.id }}" tabindex="-1" role="dialog"
                             aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header"><h5 class="modal-title pl-1" id="exampleModalLabel">Confirmation</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                                    aria-hidden="true">&times;</span></button>
                                    </div>
                                    <div class="modal-body"><p>Confirmez-vous la suppression de l'image ?</p></div>
                                    <div class="modal-footer">
                                        <form action="/admin/galerie/delete/{{ picture.id }}" method="post">
                                            <input type="hidden" name="imageToDelete" value="{{ picture.picture_name }}"/>
                                            <button type="submit" class="btn btn-danger" name="delete">Supprimer</button>
                                        </form>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}