{% extends 'layout.html.twig' %}

{% block title %}Gestion des images{% endblock %}

{% block content %}

    <!-- Affichage des images existantes -->
    <div class="container">
        <a class="btn btn-primary mx-5 my-5 " href="/admin/galerie/add" role="button">Ajouter des images</a>
        <div class="row pb-5 ">
            {% for picture in pictures %}
                <div class="col-lg-3 card " style="width: 8rem;">
                    <img class="card-img-top" src="../../{{ picture.picture_path }}" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">{{ picture.picture_name }}</p>
                        <form action="/admin/galerie/delete/{{ picture.id }}" method="post">
                            <input type="hidden" name="imageToDelete" value="{{ picture.picture_name }}"/>
                            <input type="submit" id="delete" name="delete" value="supprimer">
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}