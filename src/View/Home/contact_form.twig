<section class="section-btn">
    <div class="section-button">
        <p class="text-center">
            <button class="btn btn-outline-primary btn-contact" role="button" data-toggle="modal"
                    data-target="#form_contact">
                Nous contacter
            </button>
        </p>
        <div class="textForm">
            {% if errors is not empty %}
                <p class="text-danger">Les champs ne sont pas renseigné correctement, le mail n'a pas été envoyé</p>
            {% endif %}
        </div>
        <div class="modal modal-form fade" id="form_contact" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content modal-content-form">
                    <div class="modal-header">
                        <h4 class="modal-title" id="titre_modal">Nous contacter</h4>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="">
                            <div class="form-group">
                                <label for="lastname">Nom</label>
                                <input type="text" class="form-control" id="lastname" name="lastname"
                                       value="{{ post.lastname }}">
                                <div class="text-danger">{{ errors.lastname }}</div>
                            </div>
                            <div class="form-group">
                                <label for="firstname">Prénom</label>
                                <input type="text" class="form-control" id="firstname" name="firstname"
                                       value="{{ post.firstname }}">
                                <div class="text-danger">{{ errors.firstname }}</div>
                            </div>
                            <div class="form-group">
                                <label for="num">Votre numéro</label>
                                <input type="tel" class="form-control" id="num" name="num" value="{{ post.num }}">
                                <div class="text-danger">{{ errors.num }}</div>
                            </div>
                            <div class="form-group">
                                <label for="email">Votre email</label>
                                <input type="email" class="form-control" id="email" name="email"
                                       value="{{ post.email }}">
                                <div class="text-danger">{{ errors.email }}</div>
                            </div>
                            <div class="form-group">
                                <label for="message">Votre message</label>
                                <textarea class="form-control" id="message" name="message" rows="3"></textarea>
                                <div class="text-danger">{{ errors.message }}</div>
                            </div>
                            <button type="submit" class="btn btn-primary">Envoyer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>