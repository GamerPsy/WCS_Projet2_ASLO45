
<p class="text-center"><button class="btn btn-outline-success btn-contact" role="button" data-toggle="modal" data-target="#form_contact">
        Nous contacter
    </button></p>
<div class="textForm">
    {% if post %}
    {% if errors is not empty %}
        <p class="text-danger">Les champs ne sont pas renseigné correctement, le mail n'a pas été envoyé</p>
    {% endif %}
    {% if errors is empty  %}
        <p class="text-success">Le mail a bien été envoyé</p>
    {% endif %}
    {% endif %}
</div>
<div class="modal fade" id="form_contact" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="titre_modal">Nous contacter</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
{% if errors is not empty %}
    <div class="alert alert-danger">
        {% for error in errors %}
            <ul>
                <li>{{ error }}</li>
            </ul>

        {% endfor %}
    </div>
{% endif %}

            <div class="modal-body">
                <form method="post" action="">
                    <div class="form-group">
                        <label for="lastname">Nom</label>
                        <input type="text" class="form-control" id="lastname" name="lastname" value="{{ post.lastname }}">
                    </div>
                    <div class="form-group">
                        <label for="firstname">Prénom</label>
                        <input type="text" class="form-control" id="firstname" name="firstname" value="{{ post.firstname }}">
                    </div>
                    <div class="form-group">
                        <label for="num">Votre numéro</label>
                        <input type="tel" class="form-control" id="num" name="num" value="{{ post.num }}">
                    </div>
                    <div class="form-group">
                        <label for="email">Votre email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{ post.email }}">
                    </div>
                    <div class="form-group">
                        <label for="message">Votre message</label>
                        <textarea class="form-control" id="message" name="message" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </form>
            </div>
        </div>
    </div>
</div>
