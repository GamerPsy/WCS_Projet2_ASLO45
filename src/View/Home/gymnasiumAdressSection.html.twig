<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"></script>
<script src="/assets/js/map.js"></script>

<section class="content-2">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 text-center text-md-left mb-4 my-auto">
            <script>
                window.onload = function () {
                    let coord = [];
                    {% for coord in coords %}
                        coord.push(["{{ coord[0] }}", "{{ coord[1] }}"]);
                    {% endfor %}
                    initMap(coord);
                };
            </script>
                <div id="map"></div>
            </div>
            <div class="col-sm-12 col-md-4 text-center text-md-left">
                <h2 class="mb-4 mt-4">Informations pratiques</h2>
                {% for address in addreses %}
                    <h3 class="pt-4">{{ address.gym_name }}</h3>
                <address>
                    {{ address.gym_address }}<br>
                    {{ address.zip_code }} {{ address.city }}<br>
                </address>
                <p>{{ address.date_info }}</p>
                <p>{{ address.schedule_info }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

