<div id="events" class="container-fluid">
    {% for importantEvent in importantEvents %}
    <div class="card col-12 card-event">
{% if importantEvent.image_url %}
        <img class="card-img-top" src="assets/images/events/{{ importantEvent.image_url }}" alt="">
        {% endif %}
        <div class="card-body">
            <h4 class="card-title">{{ importantEvent.title }}</h4>
            <p class="card-text">{{ importantEvent.content }}</p>
            {% if importantEvent.link_url %}
            <a href="{{ importantEvent.link_url }}" class="btn btn-primary">Lien vers la suite de l'article</a>
            {% endif %}
        </div>
    </div>
    {% endfor %}
</div>
